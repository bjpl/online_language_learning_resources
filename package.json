{
  "name": "online_language_learning_resources",
  "version": "2.0.0",
  "description": "A beautifully crafted, modern website that curates the best language learning resources from around the web. Built with passion for polyglots and language enthusiasts worldwide.",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "review-tool": "npx serve -l 3001 --cors",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,html,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,html,css,md}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:performance": "vitest run tests/performance",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:performance",
    "test:ci": "vitest run --coverage --reporter=verbose",
    "typecheck": "echo 'Type checking not configured - using JSDoc comments for type safety'"
  },
  "keywords": [
    "language-learning",
    "resources",
    "education",
    "polyglot",
    "languages",
    "multilingual"
  ],
  "author": "Language Learning Hub Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bjpl/online_language_learning_resources.git"
  },
  "bugs": {
    "url": "https://github.com/bjpl/online_language_learning_resources/issues"
  },
  "homepage": "https://bjpl.github.io/online_language_learning_resources/",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "devDependencies": {
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-html": "^8.1.3",
    "happy-dom": "^19.0.2",
    "jsdom": "^27.0.0",
    "prettier": "^3.6.2",
    "terser": "^5.37.0",
    "vite": "^7.1.9",
    "vitest": "^3.2.4"
  }
}
